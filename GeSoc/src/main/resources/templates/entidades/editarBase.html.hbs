{{#partial "contenido"}}
        <div class="container">
            <div style="margin-top: 15%; margin-left: 20%; margin-right: 20%;">
                <form method="post">
                    <h2 class="text-primary" style="padding-left: 30%;">Editar Entidad Base</h2>
                    <input name="entidad_id" type="hidden" value="{{entidad_id}}"/>
                    <div class="form-group">
                        <label>Nombre Ficticio</label>
                        <input name="nombreFicticio" type="text" class="form-control" value="{{entidad.nombreFicticio}}"  placeholder="Nombre Ficticio" required/>
                        {{#if error}}
                            <p class="text-danger"> {{this}} </p>
                        {{/if}}
                    </div>
                    <div class="form-group">
                        <label>Descripci√≥n</label>
                        <input name="descripcion" type="text" class="form-control" value="{{entidad.descripcion}}" placeholder="Descripcion"/>
                    </div>

                    <input class="btn btn-primary btn-lg" type="submit" value="Guardar"/>
                </form>         
            </div>   
        </div>
{{/partial}}

