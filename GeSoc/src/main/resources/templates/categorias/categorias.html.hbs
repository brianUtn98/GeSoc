        <title>Categorías</title>
    </head>
    <body style="height: auto; overflow-y: auto; background-color:lightgrey;">
        <div class="container">
            <div class="row">
                <div class="col-md-auto" style="margin-bottom: 2em;">
                    <h2 class="text-primary" style="padding-left: 45%;">Categorías</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-md-auto" style="margin-bottom: 2em;">
                    <h3 class="text-primary" style="padding-left: 80%;"><a title="Nueva Categoría" href="/categoria">Nueva Categoría</a></h3>
                </div>
            </div>
            <div class="row">
                <div class="col-md-auto">
                    <table class="table table-striped">
                        <thead>
                            <th> Nombre</th>
                            <th> Reglas</th>
                            <th> Acciones</th>
                        </thead>
                        <tbody>
                        {{#each categorias}}
                            <tr>
                                <td> {{nombre}}</td>
                                <td> {{reglasNombre}}</td>
                                <td> 
                                    <a title="Ver" href="/reglas">ver Regla</a>
                                    <a title="Editar" href="/categoria/{{id}}">Editar Categoría</a>
                                </td>
                            </tr>
                        {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </body>
</html>