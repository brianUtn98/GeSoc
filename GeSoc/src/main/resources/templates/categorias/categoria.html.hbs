{{# partial "titulo" }}
    <title>{{#if unread}}({{unread}}) {{/if}}Alta de Categorías</title>
{{/partial}}

{{# partial "contenido"}}
        <div style="margin-top: 15%; margin-left: 20%; margin-right: 20%;">
            <div class="row">
                <div style="margin-bottom: 2em;">
                    <h2 class="text-primary" style="padding-left: 30%;">Carga de Categoría</h2>
                    {{#if error}}
                    <p class="text-danger"> El nombre es requerido </p>
                    {{/if}}
                </div>
            </div>
            <form method="post">
                <div class="row">
                    <div>
                        <div class="form-group">
                            <label class="col-md-3" style="font-size: large;">Nombre</label>
                            <input class="col-md-9" name="nombre" type="text" class="form-control" style="margin-top: 1%"/>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div>
                        <div class="form-group">
                            <label class="col-md-3" style="font-size: large;">Reglas</label>
                            <select class="col-md-9" name="reglas" class="form-control">
                            {{#each reglas}}
                                <option value={{tipo}}>{{nombreRegla}}</option>
                            {{/each}}
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2" style="margin-left: 67.5%; margin-top: 1%">
                        <div class="form-group">
                            <input class="btn btn-block" type="submit" value="Agregar"/>
                        </div>
                    </div>
                </div>
            </form>            
        </div>        
 {{/partial}}

{{> layout.html.hbs}}